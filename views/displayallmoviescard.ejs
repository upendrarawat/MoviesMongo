                        </tr>
                    </a>
                    <br><br>
                    <h3>
                        <%= item.moviename %>
                    </h3>
                    <p style="margin: 0;">"<%= item.description %>"</p>
                    <p style="margin: 0;">
                        <%= item.releasedate %>, <%= item.cinema %>, <%= item.address %>
                    </p>
                    <p style="margin: 0;">
