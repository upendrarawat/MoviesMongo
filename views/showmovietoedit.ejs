<style>
    .maincontainor {
        width: 100vw;
        height: 100vh;
        background-image: url("/images/kal.gif");
        display: flex;
        justify-content: center;
        align-items: center;

    }

    .box {
        width: 60%;
        height: auto;
        background: white;
        padding: 10px
    }

    .headStyle {
        font-family: kanit;
        font-size: 16x;
        font-weight: bold;

    }
</style>

<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src=" https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/javascripts/project.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap" rel="stylesheet">
</head>
<form  action="/movie/movie_edit_data" method="post">
    <div class="maincontainor">
        <div class="box">
            
                
            <input type="hidden" value="<%=data._id %>" name="movieid"/>
         
                    <div class="col-sm-6" style="width:auto;font-family: Kanit;font-size: 24px;font-weight: bold; display: flex; flex-direction: row;">
                        <div style="display: flex;flex-direction: row;">
                        <span><img src='/images/kal.gif' width='205'></span>
                        <span><img src='/images/im.gif' width='105'></span>
                        </div>
                        <div style="margin-left: auto;">
                         <a href="/movie/displayallmovies"> <img src='/images/bio.gif' width='100'></a>
                         <a href="/movie/displayallmoviescard"> <img src='/images/bioof.gif' width='100'></a>
                        </div>
                    </div>

                
                  
                   
                <div class="row">
                    <div class="col-sm-12">
                        <hr>
                    </div>
                </div>
                <div class="row headStyle">
                    <div class="col-sm-6">
                        <lable for="moviename" class="form-lable">Movie Name</lable>
                        <input required value="<%=data.moviename %>"  id="moviename" class="form-control" type="text" name="moviename">

                    </div>

                    <div class="col-sm-6">
                        <lable for="releasedate" class="form-lable">Release Date</lable>
                        <input value="<%=data.releasedate %>"  type="date" class="form-control" name="releasedate" id="releasedate">
                    </div>
                </div>
               
                <div class="row headStyle">
                    <div class="col-sm-6">
                        <lable for="discription" class="form-lable">Discription</lable>
                        <input value="<%=data.discription %>"  id="discription" class="form-control" type="text" name="discription">

                    </div>
                    <div class="col-sm-6">
                        <lable for="stateid" class="form-lable">State</lable>
                        <select class="form-select" id="stateid" name="stateid">
                            <option selected value="<%=data.stateData[0].stateid %>"><%=data.stateData[0].statename %></option>
                          
                           
                        </select>
                    </div>
                

<div class="row headstyle" style="margin-top: 10px;">
    <div class="col-sm-6">
        <lable for="cityid" class="form-lable">City</lable>
        <select class="form-select" id="cityid" name="cityid">
            <option selected="<%=data.cityData[0].stateid %>"><%=data.cityData[0].cityname%></option>
           
        </select>
    </div>               
    <div class="col-sm-6">
                        <lable for="address" class="form-lable">Address</lable>
                        <input value="<%=data.address %>"  id="address" class="form-control" type="text" name="address">
                    </div>
                </div>
                <div class="row headstyle" style="margin-top: 10px;">
                    <div class="col-sm-6">
                        <lable for="cinema" class="form-lable">Cinemas Hall</lable>
                        <select class="form-select" id="cinema" name="cinema">
                            <option selected><%=data.cinema %></option>
                            <option>INOX</option>
                            <option>IMAX</option>
                            <option>PVR</option>

                           
                        </select>
                    </div>      
                    
                    <div class="col-sm-6">
                        <lable for="rating" class="form-lable">Rating</lable>
                        <select class="form-select" id="rating" name="rating">
                            <option selected><%=data.rating %></option>
                            <div class="col-sm-6">
                            <option>*            1 out of 10</option>
                            <option>**           2 out of 10</option>
                            <option>***          3 out of 10</option>
                            <option>****         4 out of 10</option>
                            <option>*****        5 out of 10</option>
                            <option>******       6 out of 10</option>
                            <option>*******      7 out of 10</option>
                            <option>********     8 out of 10</option>
                            <option>*********    9 out of 10</option>
                            <option>**********   10 out of 10</option>

                        </select>
                                    </div>
                                </div>
                                <div class="row headstyle" style="margin-top: 10px;">
                                    <div class="col-sm-6">
                                        <lable for="movietype" class="form-lable">Movie Type</lable>
                                        <select class="form-select" id="movietype" name="movietype">
                                            <option selected><%=data.movietype %></option>
                                            <option>Bollywood</option>
                                            <option>Tollywood</option>
                                            <option>Hollywood</option>
                                        </select>
                                    </div>               
                                    <div class="col-sm-6">
                                        <lable for="language" class="form-lable">Language</lable>
                                        <select class="form-select" id="language" name="language">
                                        <option selected><%=data.language %></option>
                                            <option>Hindi</option>
                                            <option>English</option>
                                            <option>Telgu</option>
                                            <option>Urdu</option>
                                        </select>
                                                    </div>
                                                </div>




                <div class="row headStyle" style="margin-top: 10px;">
                    <div class="col-sm-6" syle="display: flex; align-items: center; justify-content: center;">
                        <button name="btn" value="Edit" type="submit" style="width:100%" class="btn btn-primary">Edit</button>
                    </div>


                    <div class="col-sm-6" syle="display: flex; align-items: center; justify-content: center;">
                        <button name="btn" value="Delete" type="Submit" style="width:100%" class="btn btn-primary">Delete</button>
                    </div>
                </div>

               


</div>
</div>
</div>
</div>
</div>


            </div>
        </div>
    </div>
</form>

</html>