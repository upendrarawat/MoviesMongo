</head>
<form  action="/movie/movie_submit" method="post" enctype="multipart/form-data">
   
    <div class="maincontainor">
        <div class="box">
            <div class="containor">
                <div class="row">
                    
                    <span><img src="/images/go.gif" width="60"></span>
                    <div class="col-sm-6" style="width:150%;font-family: Kanit;font-size: 24px;font-weight: bold; display: flex; flex-direction: row;">
                        <div style="display: flex;flex-direction: row;">
                           
                        <span><img src="/images/time.gif" width="80"></span>
                 
                        <center> <span><img src="/images/Mo.gif" width="100"></span></center>

                        </div>
                        <div class="row headStyle"  style="margin-top: 10px;"  >  
                            <div class="col-sm-12" style="display: flex; align-items: center; justify-content: center;">
                              <% if(status==2) { %>
                               <center> <h3><img src='/images/Suc.gif' width='300' ></h3></center>
                              <%} else if(status==1) {%>  
                                <center>  <h3><img src='/images/not.gif' width='300' ></h3> </center>
                              <%  } %>  
                            
                                        
                            </div>
                        </div>

                        <div style="margin-left: auto;">
                         <a href="/movie/displayallmovies"> <img src='/images/bio.gif' width='85'></a>
                         <a href="/movie/displayallmoviescard"> <img src='/images/bioof.gif' width='85'></a>
                        </div>
</div>
                  
                   
                <div class="row">
                    <div class="col-sm-12">
                        <hr>
                    </div>
                </div>
                <div class="row headStyle">
                    <div class="col-sm-6">
                        <lable for="moviename" class="form-lable">Movie Name</lable>
                        <input require id="moviename" class="form-control" type="text" name="moviename">

                    </div>

                    <div class="col-sm-6">
                        <lable for="releasedate" class="form-lable">Release Date</lable>
                        <input type="date" class="form-control" name="releasedate" id="releasedate">
                    </div>
                </div>
               
                <div class="row headStyle">
                    <div class="col-sm-6">
                        <lable for="discription" class="form-lable">Discription</lable>
                        <input id="discription" class="form-control" type="text" name="discription">

                    </div>
                    <div class="col-sm-6">
                        <lable for="stateid" class="form-lable">State</lable>
                        <select class="form-select" id="stateid" name="stateid">
                            <option selected>-Select State-</option>
                          
                           
                        </select>
                    </div>
                

<div class="row headstyle" style="margin-top: 10px;">
    <div class="col-sm-6">
        <lable for="cityid" class="form-lable">City</lable>
        <select class="form-select" id="cityid" name="cityid">
            <option selected>-Select Type</option>
           
        </select>
    </div>               
    <div class="col-sm-6">
                        <lable for="address" class="form-lable">Address</lable>
                        <input id="address" class="form-control" type="text" name="address">
                    </div>
                </div>
                <div class="row headstyle" style="margin-top: 10px;">
                    <div class="col-sm-6"  >
                        <lable for="cinema" class="form-lable">Cinemas Hall</lable>
                        <select class="form-select" id="cinema" name="cinema">
                            <option selected>-Select Cinemas Hall-</option>
                            <option>\*/ \$/ All</option>
                            <option> INOX</option>
                            <option>IMAX</option>
                            <option>PVR</option>

                           
                        </select>
                             
                    </div>

                    <div class="col-sm-6">
                        <lable for="rating" class="form-lable">Rating</lable>
                        <select class="form-select" id="rating" name="rating">
                            <option selected>- Select Rating -</option>
                            <div class="col-sm-6">
                            <option>*            1 out of 10</option>
                            <option>**           2 out of 10</option>
                            <option>***          3 out of 10</option>
                            <option>****         4 out of 10</option>
                            <option>*****        5 out of 10</option>
                            <option>******       6 out of 10</option>
                            <option>*******      7 out of 10</option>
                            <option>********     8 out of 10</option>
                            <option>*********    9 out of 10</option>
                            <option>**********   10 out of 10</option>

                        </select>
                                    </div>
                                </div>




                    <div class="row headstyle" style="margin-top: 10px;">
                        <div class="col-sm-6">
                            <lable for="movietype" class="form-lable">Movie Type</lable>
                            <select class="form-select" id="movietype" name="movietype">
                                <option selected>-Select Movie Type -</option>
                                <option>Bollywood</option>
                                <option>Tollywood</option>
                                <option>Hollywood</option>
                            </select>
                        </div>               
                        <div class="col-sm-6">
                            <lable for="language" class="form-lable">Language</lable>
                            <select class="form-select" id="language" name="language">
                            <option selected>- Select Language -</option>
                            <option>\*/ \$/ All</option>   
                            <option>Hindi....</option>
                            <option>English....</option>
                            <option>Telgu....</option>
                            <option>Urdu....</option>
                            </select>
                                        </div>
                                    </div>




            

                <div class="rows headStyle" syle="margin-top:10px;">
                    <div class="col-sm-12">
                        <lable for="poster" class="form-lable">Poster</lable>
                        <input class="form-control" name="poster" type="file" id="poster">
                    </div>
                </div>

                <div class="row headStyle" style="margin-top: 10px;">
                    <div class="col-sm-6" syle="display: flex; align-items: center; justify-content: center;">
                        <button type="submit" style="width:100%" class="btn btn-primary">Submit</button>
                    </div>


                    <div class="col-sm-6" syle="display: flex; align-items: center; justify-content: center;">
                        <button type="reset" style="width:100%" class="btn btn-primary">Reset</button>
                    </div>
                </div>

              




</div>
</div>
</div>
</div>
</div>


            </div>
        </div>
    </div>
</form>

